(page "index.html"
  (:require
   [panoply.frontend.rpc :as rpc :refer [user]]))

(with-init! (rpc/init))

(html
  (head
    (title "Panoply"))
  (body
    (h1 "Panoply")
    (p
      (if-tpl user
        (span (text "Logged in as ~(:login user)"))
        (a :href "#" :click rpc/login! "Log in with GitHub")))
    (p
      (if-tpl user
        (a :href "#" :click rpc/logout! "Log out")))))
